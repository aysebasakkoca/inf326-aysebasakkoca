@model Damacana.Models.Product
<h2> Add New Product</h2>

@using (Html.BeginForm("SaveProduct", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label for="exemple"> Identity  </label>
        <input class="form-control" id="Id" value="Enter Product Identity" />
    </div>
    <div class="form-group">
        <label for="exemple"> Names </label>
        <input class="form-control" id="Name" placeholder="Enter Product Name" />
    </div>
    <div class="form-group">
    <label for="exemple"> Price </label>
    <input class="form-control" id="Price" value="0" />
    </div>
    <button type="submit" class="btn btn-default"> Submit</button>
}